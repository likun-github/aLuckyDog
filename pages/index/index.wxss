page {
  background-color: hsl(0, 0%, 94%);
  width: 100%;
  height: 100%;
  font-family: "PingFangSC-Regular";
}

.Everday_Lottery_view {
  height: 470rpx;
  width: 90%;
  background: white;
  margin: auto;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  border-radius: 15rpx;
  border: 1rpx solid rgba(128, 128, 128, 0.459);
  display: flex;
  flex-direction: column;
  position: relative;
}

.img_everyday_view {
  height: 230rpx;
  width: 100%;
}

.Self_Lottery_view {
  height: 200rpx;
  width: 90%;
  background: white;
  margin: auto;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
}

.img_heart_view {
  width: 37rpx;
  height: 37rpx;
}

.heart_view {
  display: flex;
  height: 100rpx;
  width: 86%;
  flex-direction: row;
  position: relative;
  margin: auto;
  align-items: center;
}

.heart_view_1_text_1 {
  margin-left: 15rpx;
  font-weight: 600;
}

.heart_view_1_text_2 {
  margin-left: 15rpx;
  font-weight: 600;
}

.everyday_view {
  display: flex;
  height: 95rpx;
  width: 90%;
  flex-direction: row;
  position: relative;
  margin: auto;
}

.everyday_view_1 {
  font-size: 40rpx;
  color: rgb(240, 0, 0);
  margin-left: 17rpx;
  font-weight: 600;
  width: 40%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.everyday_view_2 {
  width: 60%;
  font-size: 24rpx;
  color: rgb(65, 64, 64);
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 17rpx;
}

.heart_view_1 {
  width: 50%;
  font-size: 30rpx;
  color: rgb(65, 64, 64);
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.heart_view_2 {
  width: 50%;
  font-size: 30rpx;
  color: rgb(65, 64, 64);
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.separator {
  height: 0.3rpx;
  width: 87%;
  background: rgba(128, 128, 128, 0.438);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: auto;
}
