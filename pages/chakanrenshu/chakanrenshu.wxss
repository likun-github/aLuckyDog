.join_pic_view {
  width: 100%;
  height: 100rpx;
}

.join_pic_view_img {
  width: 65rpx;
  height: 65rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
}

.navbar {
  position: relative;
}

.back-icon, .home-icon {
  width: 28px;
  height: 100%;
  position: absolute;
  transform: translateY(-50%);
  top: 50%;
  display: flex;
  background: rgba(0, 0, 0, 0);
}

.back-icon {
  left: 16px;
}

.home-icon {
  left: 44px;
}

.back-icon image {
  width: 18px;
  height: 18px;
  margin: auto;
}

.home-icon image {
  width: 20px;
  height: 20px;
  margin: auto;
}

.nav-title, .nav-icon {
  position: absolute;
  transform: translate(-50%, -50%);
  left: 50%;
  top: 50%;
  font-size: 0;
  font-weight: 500;
}

.title_view {
  width: 100%;
  /* top: 0; */
  z-index: 1;
  position: fixed;
  border-bottom: 1px solid rgba(187, 187, 187, 0.24);
}
