        <image src='/images/default-prize@3x.jpg' style='height:350rpx;width:100%;'></image>
      </view>

      <view class='lottery_list_1_wait'>奖品：{{item.award.name1}} X {{item.award.num1}}</view>


      <view class='lottery_list_3_wait'>{{item.award.time}}自动开奖</view>
      <view class='seperator4'></view>
    </view>

    <view class='lottery_list_wait'>
      <view>
        <image src='/images/default-prize@3x.jpg' style='height:350rpx;width:100%;'></image>
      </view>

