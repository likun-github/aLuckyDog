}

.maskLayer {
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(80, 80, 80, 0.5);
  color: #333;
  box-shadow: 0 0 50rpx rgba(0, 0, 0, 0.5);
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  z-index: 10;
}

.maskLayer .main {
  width: 80%;
  height: auto;
  top: 40vh;
  left: 10%;
  background: white;
  border-radius: 25rpx;
  position: absolute;
}

.close {
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  line-height: 100rpx;
}

