.tab {
  width: 100%;
  height: 10vh;
  position: fixed;
  bottom: 0;
  border-top: 1px solid gray;
  background: white;
}

.begin {
  width: 94%;
  height: 7vh;
  margin-left: 3%;
  margin-top: 1.5vh;
  background: red;
  color: white;
  text-align: center;
  font-size: 36rpx;
  justify-content: center;
  letter-spacing: 10rpx;
  font-weight: 600;
  line-height: 90rpx;
}

.pic {
  width: 100%;
  height: 400rpx;
  background: red;
}

.addIcon {
  position: absolute;
  top: 10rpx;
  left: 300rpx;
  height: 60rpx;
  width: 200rpx;
  background: rgba(80, 80, 80, 0.5);
  text-align: center;
  font-size: 30rpx;
  line-height: 60rpx;
  font-weight: 500;
  border-radius: 30rpx;
  color: white;
}

.contaner {
